REACT_APP_API_URL=/api
PORT=8000
NODE_ENV=development

# Database Configuration (Application Storage - SQLite)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=data_assessment
DB_USER=postgres
DB_PASSWORD=password

# Default connection settings (can be overridden by user input)
DEFAULT_SQL_SERVER_PORT=1433
DEFAULT_SQL_SERVER_ENCRYPT=false
DEFAULT_SQL_SERVER_TRUST_CERT=true

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Oracle Database (if using Oracle)
ORACLE_CLIENT_PATH=/opt/oracle/instantclient_21_1

# Connection Limits
MAX_CONNECTIONS_PER_USER=5
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=300000

# Mock Data Control
USE_MOCK_DATA=false